{
  "name": "petri-net-editor",
  "version": "0.1.0",
  "description": "A visual editor for creating and editing Petri nets",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:pn": "VITE_TOOL_CONFIG=tool_config_PN_editor.json vite",
    "dev:bn": "VITE_TOOL_CONFIG=tool_config_BN_editor.json vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src"
  },
  "dependencies": {
    "@xyflow/react": "^12.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.0.0",
    "jsdom": "^27.4.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.4.0",
    "vite": "^5.4.0",
    "vitest": "^4.0.17"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CapyRobot/BehaviorNetViz.git"
  },
  "keywords": [
    "petri-net",
    "editor",
    "visual",
    "react",
    "workflow"
  ],
  "license": "MIT"
}
